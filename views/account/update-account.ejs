<div class="account-container">
  <h1>Update Account Information</h1>

  <% if (message && message.length) { %>
  <div class="flash-message"><%= message %></div>
  <% } %> <% if (errors) { errors.forEach(e => { %>
  <div class="error"><%= e.msg %></div>
  <% }) } %>

  <!-- Account Update Form -->
  <form
    action="/account/update/<%= user.account_id %>"
    method="post"
    id="updateAccountForm"
    novalidate
  >
    <input type="hidden" name="account_id" value="<%= user.account_id %>" >

    <label for="account_firstname">First Name</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
      value="<%= typeof account_firstname !== 'undefined' ? account_firstname : user.account_firstname %>"
    >

    <label for="account_lastname">Last Name</label>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      required
      value="<%= typeof account_lastname !== 'undefined' ? account_lastname : user.account_lastname %>"
    >

    <label for="account_email">Email</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : user.account_email %>"
    >

    <button type="submit">Update Account</button>
  </form>

  <!-- Change Password Form -->
  <form
    action="/account/update-password/<%= user.account_id %>"
    method="post"
    id="changePasswordForm"
    novalidate
  >
    <input type="hidden" name="account_id" value="<%= user.account_id %>" >

    <label for="account_password">New Password</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
      pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{12,}$"
    >
    <small>
      Password must be at least 12 characters and include uppercase, lowercase,
      number, and special character.
    </small>

    <button type="submit">Change Password</button>
  </form>
</div>
