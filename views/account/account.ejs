<h1>My Account</h1>
<% if (message && message.length) { %>
  <div class="flash-message"><%= message %></div>
<% } %>
<% if (info && info.length) { %>
  <div class="flash-message"><%= info %></div>
<% } %>
<% if (notice && notice.length) { %>
  <div class="flash-message"><%= notice %></div>
<% } %>
<% if (errors) { errors.forEach(e => { %>
<div class="error"><%= e.msg %></div>
<% }) } %> <% if (user) { %>
<h2 class="welcome-message">Welcome <%= user.account_firstname %></h2>

<!-- Update account link for all users -->
<p>
  <a href="/account/update/<%= user.account_id %>"
    >Update Account Information</a
  >
</p>
<% if (user.account_type === "Employee" || user.account_type === "Admin") { %>
<h3 class="inventory-management">Inventory Management</h3>
<p>
  <a href="/inv">Go to Inventory Management</a>
</p>
<% } %> <% } %>

<p>You're logged in.</p>

