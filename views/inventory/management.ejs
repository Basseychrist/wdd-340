<!-- Remove <main> if your layout already has it -->
<h1>Inventory Management</h1>

<div class="management-links">
  <a href="/inv/add-classification">Add New Classification</a>
  <a href="/inv/add-inventory">Add New Vehicle</a>
</div>

<h2 id="manage-inv">Manage Inventory</h2>
<p>
  Select a classification from the list to see the items belonging to the
  classification.
</p>

<!-- EJS code block to display the classification select list -->
<%- classificationSelect %>

<!-- Empty table for inventory items -->
<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<!-- Link to your inventory.js file -->
<script src="/js/inventory.js"></script>

<h2 class="delete-classifications-title">Delete Classifications</h2>
<ul class="delete-classifications-list">
  <% if (classifications && classifications.length) { %>
    <% classifications.forEach(function(classification) { %>
      <li>
        <%= classification.classification_name %>
        <a href="/inv/delete-classification/<%= classification.classification_id %>"
          >Delete</a
        >
      </li>
    <% }) %>
  <% } %>
</ul>

