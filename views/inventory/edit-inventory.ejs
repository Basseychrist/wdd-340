<h1>Edit Inventory Item</h1>
<% if (message && message.length) { %>
  <div class="flash-message"><%= message %></div>
<% } %>
<% if (errors) { errors.forEach(e => { %>
  <div class="error"><%= e.msg %></div>
<% }) } %>
<form id="updateForm" action="/inv/update/" method="post" novalidate>
  <!-- <input type="hidden" name="inv_id" value="<%= locals.inv_id %>" /> -->
  <label for="classificationList">Classification:</label>
  <% if (typeof classifications !== "undefined") { %>
    <select name="classification_id" id="classificationList" required>
      <option value="">Select a classification</option>
      <% classifications.forEach(function(classification) { %>
        <option value="<%= classification.classification_id %>"
          <%= String(sticky.classification_id) === String(classification.classification_id) ? "selected" : "" %>>
          <%= classification.classification_name %>
        </option>
      <% }) %>
    </select>
  <% } else { %>
    <%- classificationSelect %>
  <% } %>
  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    value="<%= sticky.inv_make || '' %>"
    required
  />
  <label for="inv_model">Model:</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= sticky.inv_model || '' %>"
    required
  />
  <label for="inv_year">Year:</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    value="<%= sticky.inv_year || '' %>"
    required
  />
  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description" required><%= sticky.inv_description || '' %></textarea>
  <label for="inv_image">Image Path:</label>
  <input
    type="text"
    id="inv_image"
    name="inv_image"
    value="<%= sticky.inv_image || '/images/vehicles/no-image.png' %>"
    required
  />
  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input
    type="text"
    id="inv_thumbnail"
    name="inv_thumbnail"
    value="<%= sticky.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
    required
  />
  <label for="inv_price">Price:</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    value="<%= sticky.inv_price || '' %>"
    step="0.01"
    required
  />
  <label for="inv_miles">Miles:</label>
  <input
    type="number"
    id="inv_miles"
    name="inv_miles"
    value="<%= sticky.inv_miles || '' %>"
    required
  />
  <label for="inv_color">Color:</label>
  <input
    type="text"
    id="inv_color"
    name="inv_color"
    value="<%= sticky.inv_color || '' %>"
    required
  />
  <button type="submit" disabled>Update Vehicle</button>

  <input type="hidden" name="inv_id"
  <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
  <% } %>>
</form>
<script src="/js/inv-update.js"></script>
